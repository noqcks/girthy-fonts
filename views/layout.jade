doctype html
html
    head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='csrf-token', content=_csrf)
    title #{title} - Mean Width

    body
    
        .loader
            div
                div.adjBox
            style.
                .loader{
                    opacity: 1;
                    transition: all .25s;
                    background: #0074d9;
                    position: fixed;
                    top: 0;
                    bottom: 0;
                    left: 0;
                    right: 0;
                    display: table;
                    z-index: 99;
                    width: 100%;
                    height: 100%;
                }
                .loader > div{
                    display: table-cell;
                    margin: 0 auto;
                    vertical-align: middle;
                    text-align: middle;

                }

                @keyframes adjBox {
                  0% {
                    width: 100px; 
                  }
                  50% {
                    width: 200px;
                  }
                  100% {
                    width: 100px;
                  }
                }
                @-webkit-keyframes adjBox {
                  0% {
                    width: 100px; 
                  }
                  50% {
                    width: 200px;
                  }
                  100% {
                    width: 100px;
                  }
                }
                @-moz-keyframes adjBox {
                  0% {
                    width: 100px; 
                  }
                  50% {
                    width: 200px;
                  }
                  100% {
                    width: 100px;
                  }
                }

                .adjBox{
                    height: 50px;
                    width: 100px;
                    background-color: white;
                    margin: 0 auto;
                    box-shadow: 10px 10px rgba(0,0,0,.25);
                    -webkit-animation: adjBox 5s infinite; /* Chrome, Safari, Opera */
                    -moz-animation: adjBox 5s infinite; /* Chrome, Safari, Opera */
                    animation: adjBox 5s infinite;
                }

    include partials/header

    include partials/flash
    block content

    //- include partials/footer


